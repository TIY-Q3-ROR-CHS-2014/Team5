<%= form_for @question do |form| %>
  <%= form.label :category_id %>
  <%= form.select :category_id, options_for_select( @categories.collect {|category| [category.name, category.id]}) %>
  <%= form.label :content %>
  <%= form.text_field :content, autofocus: true %>
  <%= form.label :difficulty %>
  <%= form.number_field :difficulty %>
  <%= form.label :answer %>
  <%= form.number_field :answer %>
  <%= form.submit "Submit Question" %>
<% end %>
