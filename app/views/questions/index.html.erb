<!-- <h3><u>Current Questions</u></h3> -->
<div class="questionList">
  <div class="row">
    <% @questions.each do |question| %>
        <div class="col-lg-3 col-md-4 col-sm-6 question-panel">
          <%= link_to edit_question_path(question) do %>
            <div class="panel panel-info">
              <div class="panel-heading">
                <h3 class="panel-title">
                  Category: <%= question.category.name %>
                  <span class="pull-right">
                    Difficulty: <%= question.difficulty %>
                  </span>
                </h3>
                
              </div>
              <div class="panel-body standard-text labeltext">
                <%= question.content %> <%= question.answer %>
              </div>
            </div>
          <% end %>

          
        </div>
    <% end %>
    <div class="col-lg-3 col-md-4 col-sm-6 question-panel">
      
      <%= link_to new_question_path do %>
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">
              Category:
              <span class="pull-right">
                Difficulty:
              </span>
            </h3>
            
          </div>
          <div class="panel-body standard-text text-center labeltext">
            Add Question
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
