<!DOCTYPE html>
<html>
<head>
  <title>GroupProject</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <!--Google font -->
  <link href='http://fonts.googleapis.com/css?family=Lato:300' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Ek+Mukta:400,800' rel='stylesheet' type='text/css'>

</head>
<body class="backgroundstyle"  ng-app="mathGame">

  <a class="navbar-brand" href="/#/game">Play Game</a>
  <%- if user_signed_in?%>
    <%- if current_user.admin?%>
      <%= link_to "Categories", categories_path, class: "navbar-brand" %>
      <%= link_to "Questions", questions_path, class: "navbar-brand"  %>

    <% end %>
  <% end %>

  <%= render 'devise/menu/registration_items' %>

  <%= render 'devise/menu/login_items' %>


<%- if notice || alert %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
<% end %>
<div class="container">
  <%= yield %>
</div>

</body>
</html>
